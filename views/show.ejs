        <input type='text' name = 'equipment' value="<%= allEquip.equipment %>" />
        <label name="tagNumber" class="tagNumber">Tag Number</label>
        <input type='text' name = 'tagNumber' value="<%= allEquip.tagNumber %>" />
        <label name="receiptInspection" class="receiptInspection">Receipt Inspection</label>
        <input type='checkbox' name = 'receiptInspection'  checked = '<% allEquip.receiptInspection%>' />
        <label name="damage" class="damage">Damage</label>
        <input type='checkbox' name = 'receiptInspection'  checked = '<% allEquip.damage%>' />
